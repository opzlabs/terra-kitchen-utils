{"code":"import BigNumber from \"bignumber.js\";\r\nimport numeral from \"numeral\";\r\nimport { isNil, pickBy } from \"ramda\";\r\nimport { warn } from \"./utils\";\r\nimport { isDenom, isDenomIBC, isDenomLuna, isDenomTerra } from \"./is\";\r\nconst ROUNDING_MODE = BigNumber.ROUND_DOWN;\r\nconst DefaultConfig = {\r\n    decimals: 6,\r\n    fixed: false,\r\n    comma: false,\r\n    integer: false,\r\n    prefix: false\r\n};\r\nconst getConfig = (config = {}) => Object.assign({}, DefaultConfig, pickBy(value => !isNil(value), config));\r\n/* decimals */\r\nexport const formatNumber = (value, config) => {\r\n    if (!validateValue(value))\r\n        return \"0\";\r\n    const { decimals, comma, integer, fixed, prefix } = getConfig(config);\r\n    const dp = typeof fixed === \"number\" ? fixed : decimals;\r\n    const n = new BigNumber(value).dp(integer ? 0 : dp, ROUNDING_MODE);\r\n    const d = Array.from({ length: dp }, () => \"0\").join(\"\");\r\n    const fmt = !prefix\r\n        ? [comma ? \"0,0\" : \"0\", fixed ? d : `[${d}]`].join(\".\")\r\n        : integer\r\n            ? \"0a\"\r\n            : fixed === 1\r\n                ? \"0.0a\"\r\n                : \"0.00a\";\r\n    return n.lt(1e-6)\r\n        ? n.toString(10)\r\n        : numeral(n)\r\n            .format(fmt)\r\n            .toUpperCase();\r\n};\r\n/* amount */\r\nexport const readAmount = (value, config) => {\r\n    if (!validateValue(value)) {\r\n        return \"0\";\r\n    }\r\n    const { decimals } = getConfig(config);\r\n    return formatNumber(new BigNumber(value).div(new BigNumber(10).pow(decimals)), config);\r\n};\r\nexport const toAmount = (value, config) => {\r\n    if (!validateValue(value))\r\n        return \"0\";\r\n    const { decimals } = getConfig(config);\r\n    return new BigNumber(value)\r\n        .times(new BigNumber(10).pow(decimals))\r\n        .integerValue()\r\n        .toString();\r\n};\r\n/* denom */\r\nexport const readDenom = (denom) => !isDenom(denom)\r\n    ? \"\"\r\n    : isDenomLuna(denom)\r\n        ? \"Luna\"\r\n        : isDenomTerra(denom)\r\n            ? `${denom.slice(1, 3).toUpperCase()}T`\r\n            : isDenomIBC(denom)\r\n                ? denom.replace(\"ibc/\", \"\")\r\n                : denom.slice(1).toUpperCase();\r\n/* percent */\r\nexport const formatPercent = (value, config) => {\r\n    if (!validateValue(value))\r\n        return \"0\";\r\n    const DefaultFixed = 2;\r\n    const fixed = isNil(config?.fixed) ? DefaultFixed : config?.fixed;\r\n    const n = new BigNumber(value).times(100);\r\n    return typeof fixed === \"number\" ? n.toFixed(fixed) : n.toString();\r\n};\r\nexport const readPercent = (value, config) => {\r\n    return formatPercent(value, config) + \"%\";\r\n};\r\n/* date */\r\nexport const formatDate = (date) => date.toString();\r\n/* helpers */\r\nconst validateValue = (value) => {\r\n    if (isNil(value) || new BigNumber(value).isNaN()) {\r\n        warn(`Value is ${value}`);\r\n        return false;\r\n    }\r\n    return true;\r\n};\r\n//# sourceMappingURL=format.js.map","references":["/home/chaiya/terra.kitchen/utils/node_modules/bignumber.js/bignumber.d.ts","/home/chaiya/terra.kitchen/utils/node_modules/@types/numeral/index.d.ts","/home/chaiya/terra.kitchen/utils/node_modules/@types/ramda/index.d.ts","/home/chaiya/terra.kitchen/utils/src/utils.ts","/home/chaiya/terra.kitchen/utils/src/is.ts"],"map":"{\"version\":3,\"file\":\"format.js\",\"sourceRoot\":\"\",\"sources\":[\"../../../../src/format.ts\"],\"names\":[],\"mappings\":\"AAAA,OAAO,SAAS,MAAM,cAAc,CAAA;AACpC,OAAO,OAAO,MAAM,SAAS,CAAA;AAC7B,OAAO,EAAE,KAAK,EAAE,MAAM,EAAE,MAAM,OAAO,CAAA;AACrC,OAAO,EAAE,IAAI,EAAE,MAAM,SAAS,CAAA;AAC9B,OAAO,EAAE,OAAO,EAAE,UAAU,EAAE,WAAW,EAAE,YAAY,EAAE,MAAM,MAAM,CAAA;AAErE,MAAM,aAAa,GAAG,SAAS,CAAC,UAAU,CAAA;AAU1C,MAAM,aAAa,GAAiB;IAClC,QAAQ,EAAE,CAAC;IACX,KAAK,EAAE,KAAK;IACZ,KAAK,EAAE,KAAK;IACZ,OAAO,EAAE,KAAK;IACd,MAAM,EAAE,KAAK;CACd,CAAA;AAED,MAAM,SAAS,GAAG,CAAC,SAAgC,EAAE,EAAgB,EAAE,CACrE,MAAM,CAAC,